<icecast>
    <location>Hazimozi</location>
    <admin>matyas@ter.cz</admin>
    <hostname>127.0.0.1</hostname>
    <limits>
        <clients>2500</clients>
        <sources>1</sources>
        <queue-size>524288</queue-size>
        <client-timeout>30</client-timeout>
        <header-timeout>15</header-timeout>
        <source-timeout>10</source-timeout>
        <burst-size>65535</burst-size>
    </limits>
    <authentication>
        <source-password>testke</source-password>
        <relay-password>testke</relay-password>
        <admin-user>admin</admin-user>
        <admin-password>testke</admin-password>
    </authentication>
    <listen-socket>
        <port>8000</port>
    </listen-socket>
    <mount type="normal">
        <mount-name>/radio.mp3</mount-name>
        <charset>UTF8</charset>
        <stream-name>Lahmacun radio localko</stream-name>
        <stream-description>Delayyyy</stream-description>
        <stream-url>http://127.0.0.1:8000/radio.mp3</stream-url>
        <genre>Rave</genre>
    </mount>
    <fileserve>1</fileserve>
    <paths>
        <basedir>/usr/local/share/icecast</basedir>
        <logdir>/var/azuracast/stations/lahmacun_radio/config</logdir>
        <webroot>/usr/local/share/icecast/web</webroot>
        <adminroot>/usr/local/share/icecast/admin</adminroot>
        <pidfile>/var/azuracast/stations/lahmacun_radio/config/icecast.pid</pidfile>
        <alias source="/" dest="/status.xsl"/>
        <deny-ip>/var/azuracast/stations/lahmacun_radio/config/ip_bans.txt</deny-ip>
        <x-forwarded-for>172.*.*.*</x-forwarded-for>
    </paths>
    <logging>
        <accesslog>icecast_access.log</accesslog>
        <errorlog>/dev/stderr</errorlog>
        <loglevel>2</loglevel>
        <logsize>10000</logsize>
    </logging>
    <security>
        <chroot>0</chroot>
    </security>
</icecast>